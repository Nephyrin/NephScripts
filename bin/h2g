#!/bin/bash

h=$1

if [ -d .hg ]; then
   h=$(hg log -r "$h" --template {node})
fi

if [ ! -f .git/git-mapfile ]; then
    cd "$MOZPATH/moz-git"
fi

r="$(basename "$PWD")"

if [ -z "$h" ]; then
    echo >&2 "!! Could not find hg commit"
    exit 1
fi

g=$(cat .git/git-mapfile | grep -m 1 $h | cut -d ' ' -f 1)

if [ -z "$g" ]; then
    echo >&2 "!! No matching git commit"
    exit 1
fi

echo $g
