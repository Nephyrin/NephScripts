#!/bin/bash

if [ ! -f .git/git-mapfile ]; then
    cd "$MOZPATH/moz-git"
fi

g=$1
r="$(basename "$PWD")"

g=$(git rev-parse "$g")

if [ -z "$g" ]; then
    echo >&2 "!! Could not find git commit"
    exit 1
fi

h=$(cat .git/git-mapfile | grep -m 1 $g | cut -d ' ' -f 2)

if [ -z "$h" ]; then
    echo >&2 "!! Not found"
    exit 1
fi

echo $h
