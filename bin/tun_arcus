#!/bin/bash

set -e
source "$(dirname "$0")"/lib/util.sh

while true; do
  echo ":: Launching SSH"
  if try_keychain; then
    ssh -T -R24800:localhost:24800 -N johns@arcus.mv.mozilla.com -o "BatchMode=yes" -o "ExitOnForwardFailure=true" || true
  else
    echo "!! Keychain not running"
  fi
  echo ":: Died, retrying"
  sleep 2
done
