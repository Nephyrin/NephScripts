#!/bin/bash

export MOZ_USE_OMTC=1

export MOZ_PROFILER_NEW=1
export MOZ_PROFILER_VERBOSE=1
export MOZ_PROFILER_INTERVAL=10
export MOZ_PROFILER_MODE=native
export MOZ_PROFILER_STACK_SCAN=0

if [ "$1" = "-g" ]; then
    shift
    cd ~/firefox-nightly
    cleangtk gdb -ex "handle SIGPIPE nostop noprint pass" -ex run \
        --args ./firefox -P default "$@"
else
    cleangtk ~/firefox-nightly/firefox -P default "$@"
fi
