#!/bin/bash

# Update the git repo, syncing its map file with any local exports
# and fixing missing tags
set -e
cd ~/moz/moz-git

branch="$1"

if [ ! -z "$branch" ] && [ ! -d "../mozilla-$branch" ]; then
  echo >&2 "!! Branch $branch not found..."
  exit 1
fi

echo ":: Updating git"
git fetch --all --tags
(
    cd .git/map
    git pull --no-edit
)

if [ ! -z "$branch" ]; then
  echo ":: Syncing $branch"
  ghsync "$branch"
fi

echo ":: Fixing missing tags"
git fetch github $((git tag >/dev/null ) 2>&1 | sed -r 's/error: (.*) does.*/\1/g;tx;d;:x')
