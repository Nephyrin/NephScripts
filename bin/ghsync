#!/bin/bash

set -e
# Sync an hg repo to its git mirror

repo="$(basename "$1")"
repo="${repo#mozilla-}"

echo ":: Updating $repo"
cd ~/moz
if [ ! -d "mozilla-$repo/.hg" ]; then
  echo >&2 "mozilla-$repo" does not appear to be a hg repository
  exit 1
fi

cd "mozilla-$repo"
echo ":: pulling"
hg pull
echo ":: updating"
hg up -C
echo ":: bookmarking"
rm -fv .hg/bookmarks
hg bookmark -vf $repo
echo ":: exporting"
hg gexport -v

cd ~/moz/moz-git/.git/map
git commit -a -m "Locally imported revisions" || true
