#!/bin/bash

set -e
. ~/bin/lib/util.sh

usage() {
  local out
  if [[ -n $1 ]]; then
    # Error
    out() { ewarn "$@"; }
  else
    out() { einfo "$@"; }
  fi
  out "Usage: pf [options] <pattern> [[--] [ps arguments]]"
  out "  -h / --help                Show this usage message"
  [[ -n $1 ]] || exit 0
  exit 1
}

# Parse args
parse_args pf h help "$@" || usage 1

eval args=("$(get_args)")

# Help
[[ -z $(get_merged_option h help) ]] || usage

# Pattern
pattern="${args[0]}"
[[ -n $pattern && ${#args[@]} -ge 1 ]] || usage 1

psargs=("${args[@]:1}")

pids=($(pgrep "$pattern"))

[[ ${#pids[@]} -ne 0 ]] || exit 1

cmd ps -p "${pids[*]}" "${psargs[@]}"
