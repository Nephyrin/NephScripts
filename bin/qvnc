#!/bin/bash

set -e

. "$(dirname "$0")"/lib/util.sh

parse_args qvnc '' '' "$@"
[ "$(num_args)" -ge 1 ] || die "Usage: qvnc display [vncviewer args...]]"

eval args=("$(get_args)")
display="${args[0]}"
vnc_args=("${args[@]:1}")

trap "cmd vncserver -kill $display" EXIT
cmd vncserver $display
cmd env DISPLAY=$display kwin --replace &
cmd vncviewer $display -passwd ~/.vnc/passwd "${vnc_args[@]:1}"
